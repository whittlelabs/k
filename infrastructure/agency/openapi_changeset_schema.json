{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Changeset",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "Descriptive summary of the changes."
    },
    "additions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "description": "Relative file path" },
          "content": { "type": "string", "description": "Full file content" }
        },
        "required": ["path", "content"]
      }
    },
    "removals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "description": "Relative file path" },
          "content": { "type": "string", "description": "Full file content" }
        },
        "required": ["path", "content"]
      }
    },
    "modifications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "description": "Relative file path" },
          "content": { "type": "string", "description": "Full file content" }
        },
        "required": ["path", "content"]
      }
    }
  },
  "required": ["summary", "additions", "removals", "modifications"]
}
